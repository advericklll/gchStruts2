<!DOCTYPE validators PUBLIC 
 "-//Apache Struts//XWork Validator 1.0.2//EN" 
 "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>   
    <field name="curso.descripcion">
        <field-validator type="requiredstring">
            <message key="campo.requerido"/>
        </field-validator>
    </field>
    <field name="curso.requisito">
        <field-validator type="requiredstring">
            <message key="campo.requerido"/>
        </field-validator>
    </field>
    <field name="curso.objetivo">
        <field-validator type="requiredstring">
            <message key="campo.requerido"/>
        </field-validator>
    </field>
    <field name="curso.precio">
        <field-validator type="required">
            <message key="campo.requerido"/>
        </field-validator>
    </field>
    <field name="curso.duracion">
        <field-validator type="required">
            <message key="campo.requerido"/>
        </field-validator>
    </field>
    <field name="curso.estado">
        <field-validator type="requiredstring">
            <message key="campo.requerido"/>
        </field-validator>
    </field>    
</validators>
